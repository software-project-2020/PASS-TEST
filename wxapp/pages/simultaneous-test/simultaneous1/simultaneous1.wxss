/* pages/simultaneous-test/simultaneous1/simultaneous1.wxss */
@import "../../../colorui/animation.wxss";
page{
  overflow: hidden;
  background-image: url('https://picture.morii.top/renzhixuetang/background/13.jpg');
  background-size: 100% 100%;
  height:100%
}
.container{
  padding: 0rpx;
  height: 100%;
  justify-content: center;
}
.border{
  height: 80%;
  width: 90%;
  display: flex;
  justify-content: center;  /*水平*/
  align-items: center; /*垂直*/
  background-color: #ffffff;
  opacity: 0.9;
  border: 9rpx solid #2BB31C;
  border-radius: 30rpx;
  padding: 25rpx;
  flex-direction: column;
}
.border1{
  /* border: 5rpx solid #2BB31C; */
  border-radius: 10rpx;
  background-color:#6ca338;
}
.img1{
  display: flex;
  bottom:0;
}
.top{
  width: 100%;
  display: flex;
  justify-content: center;
  /* height:15%; */
}
.clock{
  margin:12% 0% 0% 1%;
}
.time{
  margin: 13% 0% 1% 0%;
  /* height: 50%; */
  width: 10%;
  display: flex;
  background-color: #ffffff;
  opacity: 0.8;
  border: 4rpx solid #2BB31C;
  border-radius: 15rpx;
  text-align:center;
  align-items:center;
  justify-content: center;
}
.jindu{
  /* 上右下左 */
  margin:12% 3% 1% 0%;
  height: 60rpx;
  width: 25%;
  display: flex;
  background-color: #ffffff;
  opacity: 0.8;
  border: 4rpx solid #2BB31C;
  border-radius: 15rpx;
  text-align:center;
  align-items:center;
  justify-content: center;
}
.eyu{
  margin:0% 5% 0% 0%;
}
.word{
  color: #18690f;
  font-size: 32rpx;
  font-weight: 550;
  line-height: 53rpx;
  padding-bottom: 20rpx;
}
.timu{
  height: 50%;width:100%;
  padding:10rpx;
  border-radius:10rpx;
  display: flex;
  flex-direction: column;
}
.timu image{
  height:100%;
  width:100%;
  border-radius:20rpx;
}
.choice{
  width: 80%;
  height: 100%;
  padding: 10rpx 30rpx;
}
.choose{
  display: flex;
  flex-direction: column;
  width:100%;
  align-items:center;
  justify-content:center;
  height: 48%;
}
.line{
  display: flex;
  height:25%;
  width: 100%;
}
.submit{
  /* border: 4rpx solid #2BB31C; */
  border-radius: 25rpx;
  background-color: green;
}
.block{
  width: 100%;
  justify-content: center;
  display: flex;
}
.buttonword{
  color:white;
  font-size: 32rpx;
  font-weight: 550;
  line-height: 53rpx;
  padding-bottom: 20rpx;
  /* padding-top: 20rpx; */
}
.buttonline{
  display: flex;
  padding-top: 20rpx;
}