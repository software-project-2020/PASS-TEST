<!--pages/simultaneous-test/simultaneous1/simultaneous1.wxml-->

<view class="container">
  <view class="top" style="flex-direction:row;">
    <view class="eyu">
      <image class='img1' mode='widthFix' src='../../../image/lyq/animal/eyu.png' style="width: 175rpx; "></image>
    </view>
    <view class="jindu">
      <text class="text-jindu" style="color:#2BB31C">进度：1/3</text>
    </view>
    <view class="clock">
      <image class='img1' mode='widthFix' src='../../../image/lyq/clock.png' style="width: 70rpx;"></image>
    </view>
    <view class="time">
      <text style='color:#2BB31C'>{{displayTime}}s</text>
    </view>
  </view>
  <view class="border">
    <view class="timu">
      <text class="word">题目：请在下面6个选项中选出空缺处的图案。</text>
      <image src="{{qlist[now].q}}">题目加载中</image>
    </view>
    <view class="choose">
      <view class="line">
        <view>
          <image wx:if="{{choosed[0]?true:false}}" class="choice border1" src="{{qlist[now].c[0]}}" bindtap="chooseAnster" data-index="0"></image>
          <image wx:if="{{!choosed[0]}}" class="choice" src="{{qlist[now].c[0]}}" bindtap="chooseAnster" data-index="0"></image>
        </view>
        <view>
          <image wx:if="{{choosed[1]}}" class="choice border1" src="{{qlist[now].c[1]}}" bindtap="chooseAnster" data-index="1"></image>
          <image wx:if="{{!choosed[1]}}" class="choice" src="{{qlist[now].c[1]}}" bindtap="chooseAnster" data-index="1"></image>
        </view>
      </view>
      <view class="line">
        <view>
          <image wx:if="{{choosed[2]}}" class="choice border1" src="{{qlist[now].c[2]}}" bindtap="chooseAnster" data-index="2"></image>
          <image wx:if="{{!choosed[2]}}" class="choice" src="{{qlist[now].c[2]}}" bindtap="chooseAnster" data-index="2"></image>
        </view>
        <view>
          <image wx:if="{{choosed[3]}}" class="choice border1" src="{{qlist[now].c[3]}}" bindtap="chooseAnster" data-index="3"></image>
          <image wx:if="{{!choosed[3]}}" class="choice" src="{{qlist[now].c[3]}}" bindtap="chooseAnster" data-index="3"></image>
        </view>
      </view>
      <view class="line">
        <view>
          <image wx:if="{{choosed[4]}}" class="choice border1" src="{{qlist[now].c[4]}}" bindtap="chooseAnster" data-index="4"></image>
          <image wx:if="{{!choosed[4]}}" class="choice" src="{{qlist[now].c[4]}}" bindtap="chooseAnster" data-index="4"></image>
        </view>
        <view>
          <image wx:if="{{choosed[5]}}" class="choice border1" src="{{qlist[now].c[5]}}" bindtap="chooseAnster" data-index="5"></image>
          <image wx:if="{{!choosed[5]}}" class="choice" src="{{qlist[now].c[5]}}" bindtap="chooseAnster" data-index="5"></image>
        </view>
      </view>
    </view>
    <button class="submit word" bindtap="submitAnswer">确定</button>
  </view>
  <mp-dialog title="提交答案" show="{{dialogShow}}" bindbuttontap="tapDialogButton" buttons="{{oneButton}}">
    <text>请继续完成下一题！</text>

  </mp-dialog>
</view>