page {
  overflow: hidden;
  background-image: url('https://picture.morii.top/renzhixuetang/background/8.jpg');
  background-size: 100% 100%;
  height: 100%;
  width: 100%;
}

.container {
  padding: 0rpx;
  height: 100%;
  width: 100%;
}

.main {
  width: 95%;
  height: 100%;
}
.rules{
  margin: 20px 0px;
  border-radius: 10px;
  justify-content: center;
  align-items: center;
  opacity: 0.92;
  height: 80%;
}
.border {
  height: 750rpx;
  width: 70%;
  display: flex;
  justify-content: center;
  /*水平*/
  align-items: center;
  /*垂直*/
  background-color: #ffffff;
  opacity: 0.8;
  border: 9rpx solid #2BB31C;
  border-radius: 30rpx;
  padding: 20rpx;
  flex-direction: column;
  margin-bottom: 7%;
}

.img1 {
  display: flex;
  bottom: 0;
}

.top {
  width: 100%;
  display: flex;
  justify-content: center;
}

.bottom {
  width: 100%;
  display: flex;
  justify-content: center;
}

.img2 {
  margin-right: 20% 40% 0% 40%;
}
