/* pages/SelfCenter/suggestion/suggestion.wxss */
.container{
  padding: 0rpx;
}
.border{
  height: 250rpx;
  width: 70%;
  display: flex;
  justify-content: center;  /*水平*/
  align-items: center; /*垂直*/
  border: 4rpx solid #b6b6b6;
  border-radius: 30rpx;
  padding: 25rpx;
  flex-direction: column;
  margin: 2% 0% 2% 0%;
}
.border2{
  text-align: left;
  height: 150rpx;
  width: 70%;
  flex-direction: row;
  display: flex;
  justify-content:flex-start;
  align-items: center; /*垂直*/
  border: 4rpx solid #b6b6b6;
  border-radius: 30rpx;
  padding: 25rpx;
  margin: 2% 0% 2% 0%;
}
.border3{
  height: 50rpx;
  width: 70%;
  display: flex;
  justify-content: center;  /*水平*/
  align-items: center; /*垂直*/
  border: 4rpx solid #b6b6b6;
  border-radius: 30rpx;
  padding: 25rpx;
  flex-direction: column;
  margin: 2% 0% 2% 0%;
}
.text{
  color: rgb(104, 104, 104);
}
.thanks{
  font-size: 50rpx;
  color: #838383;
}
.submit{
 margin: 5% 0% 10% 0%;
 box-shadow: 5px 6px 10px rgb(104, 104, 104);
 border-radius: 10px;
 font-size: 25px;
 background-color: rgb(253, 253, 253);
 color: rgb(134, 134, 134);
}
textarea{
  border: 1px rgb(206, 206, 206) ;
  margin: auto;
  width:90%;
  height: 100%; 
  margin-top:5px;
  padding: 3px;
}
.upload[plain]{
  border:none;
  background-color: #f5f5f5;
  border: #b6b6b6 2rpx dashed ;
  border-radius: 3rpx;
  margin-right: 68%;
  display: flex;
  height: 100%;
  justify-content: center;  /*水平*/
  align-items: center; /*垂直*/
}


