<!--pages/SelfCenter/suggestion/suggestion.wxml-->
<view class="container">
  <view>
    <text class="text">问题反馈</text>
    <image mode='widthFix' src='../../../image/lyq/suggestion/cute1.png' style="width: 150rpx;margin-left:300rpx; "></image></view>
    <view class="border">
      <textarea placeholder="请写下您的问题或者建议" bindblur="bindblur" maxlength="1000"/>
    </view>
    <view>
    <text class="text">添加图片</text>
    <image mode='widthFix' src='../../../image/lyq/suggestion/cute2.png' style="width: 150rpx;margin-left:300rpx; "></image></view>
    <view class="border2" ><button class="upload"  plain="true" bindtap="chooseWxImage" style="width: 30%;">
      <image class="img" mode='widthFix' src='../../../image/lyq/add.png'></image>
    </button></view>
    <view>
    <text class="text">联系方式</text>
    <image mode='widthFix' src='../../../image/lyq/suggestion/cute3.png' style="width: 150rpx;margin-left:300rpx; "></image></view>
    <view class="border3">
        <input class="weui-input" bindblur="bindblur1" placeholder="请填写电子邮件地址"/>
    </view>
    <view>
      <image mode='widthFix' src='../../../image/lyq/suggestion/cute4.png' style="width: 150rpx;"></image>
      <text class="thanks">谢谢您的宝贵意见</text>
    </view>
    <button class="submit">提交反馈</button>
</view>
