
<view class="container">
  <!-- 两个按钮 -->
  <view class="head">
    <button class="back_btn" plain="true" bindtap="goback" style="width: 80rpx; ">
    <image class='back_img' mode='widthFix' src='../../../image/lyq/btn/back.png' style="width: 80rpx; "></image>
  </button>
  <button class="music_btn" plain="true" bindtap="changemusic" style="width: 80rpx; ">
    <image class='back_img' mode='widthFix' src='../../../image/lyq/music.png' style="width: 80rpx; "></image>
  </button>
</view>
<view class="time">
  <text class="testtime">测试时间</text>
  <view class='select_box'>
 <view class='select' catchtap='selectTap'>
  <text class='select_text'>{{selectData[index]}}</text>
  <image class='select_img {{show&&"select_img_rotate"}}' src='/image/gobottom.png'></image>   
 </view>
 <view class='option_box' style='height:{{show?(selectData.length>5?300:selectData.length*60):0}}rpx;'>
  <text class='option' style='{{index==selectData.length-1&&"border:0;"}}' wx:for='{{selectData}}' wx:key='this' data-index='{{index}}' catchtap='optionTap'>{{item}}</text>
 </view>
</view>
</view>
  <view class="border">
    <view class="t1" wx:for="{{month}}">
    <view class="t2" wx:for="{{month[index]}}" ><button class="month_btn"><text class="text_month">{{item}}</text></button></view>
    </view>
  </view>
  <view class="record">
    <text class="record_text">测试记录</text>
    <view class="tecord_border"></view>
  </view>
</view>
