  opacity: 0.8;
  border: 9rpx solid #9f9fdf;
  border-radius: 30rpx;
  padding: 20rpx;
  flex-direction: column;
  margin-bottom: 3%;
}

.img1{
  display: flex;
  bottom:0; 
}
.top{
  width: 100%;
  margin-top: 5%;
  display: flex;
  justify-content: center;
}

.rules{
  color: #6262c2;
  font-size: 30rpx;
