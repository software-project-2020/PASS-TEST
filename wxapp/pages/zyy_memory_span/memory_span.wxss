page{
  overflow: hidden;
  background-image: url('https://picture.morii.top/renzhixuetang/background/9.jpg');
  background-size: 100% 100%;
  height: 100%;
}
.container{
  flex-direction: column;
  width: 100%;
  height: 100%;
  padding: 0;
}
.img2,.img1{
  display: flex;
  bottom:0; 
}
.top{
  width: 100%;
  display: flex;
  justify-content: center;
}
.clock{
  margin:12% 0% 0% 1%;
}
.proflag{
  margin:10% 0% 0% 1%;
}
.time{
  margin: 13% 6% 1% 0%;
  height: 54rpx;
  width: 12%;
  display: flex;
  background-color: #ffffff;
  opacity: 0.8;
  border: 4rpx solid #B1AFE6;
  border-radius: 15rpx;
  text-align:center;
  align-items:center;
  justify-content: center;
}
.process{
  margin: 13% 7% 1% 0%;
  height: 60rpx;
  width: 28%;
  display: flex;
  background-color: #ffffff;
  opacity: 0.8;
  border: 4rpx solid #B1AFE6;
  border-radius: 15rpx;
  text-align:center;
  align-items:center;
  justify-content: center;
}

.chess_map {
  width: 80%;
  display: flex;
  overflow: hidden;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-content: center;
  border-radius: 20rpx;
  background-color: #ffffff;
  border: 11rpx solid #9f9fdf;
  margin-top: 20rpx;
  margin-left: auto;
  margin-right: auto;
}

.chess_box {
  color: rgb(122, 66, 20);
  font-size: 70rpx;
  font-weight: 600;
  position: relative;
  border-radius: 10rpx;
  border: 10rpx;
  border-color: rgba(80, 44, 14, 0.973);
  /* for Child: the Number */
  display: flex;
  align-items: center;
  justify-content: center;
}

.chess_content {
  /* background-color: #f7cc8b; */
  /* background-image: url(/asset/mood_chess.png); */
  /* 用站长工具，在线转为base64 */
  background-size: 100% 100%;
  width: 100%;
  height: 100%;
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  left: 0;
  top: 0;
  z-index: 10;
}

.chess_below {
  height: auto;
  overflow: visible;
  white-space: nowrap;
  justify-content: space-between;
  align-content: space-between;
  text-align: center;
  border-radius: 20rpx;
  background-color: #ffffff;
  border: 11rpx solid #9f9fdf;
  margin-top: 20rpx;
  margin-left: auto;
  margin-right: auto;
}

.chess_drag {
  /* opacity: 0.4; */
  position: relative;
  display: inline;
  margin: 3px;
}

.f_center {
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
}

.button{
  width: 40%;
  border: #9f9fdf 7rpx solid;
  border-radius: 60rpx;
  background-color: #cdcdfc;
}
.button text{
  padding: 20rpx 0;
  font-size: 45rpx;
  color: #5c5ca3;
}