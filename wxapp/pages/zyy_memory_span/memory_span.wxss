/* pages/grid/grid.wxss */
page {
  height: 100%;
}

.background{
  width: 750rpx;
  height: 750rpx;
  background-color: aqua;
}
.chess_map{
  display: flex;
  overflow: hidden;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-content: center;
  border-radius: 20rpx;
  border: 20rpx solid rgba(48, 67, 63, 0.8);
  margin-top: 20rpx;
  margin-left: auto;
  margin-right: auto;
  background-color: #583e00;
}
.chess_box{
  color: rgb(122, 66, 20);
  font-size: 70rpx;
  font-weight: 600;
  position: relative;
  border-radius: 10rpx;
  border: 10rpx;
  border-color: rgba(80, 44, 14, 0.973);
  /* for Child: the Number */
  display: flex;
  align-items: center;
  justify-content: center;
}
.chess_content{
  /* background-color: #f7cc8b; */
  /* background-image: url(/asset/mood_chess.png); */ /* 用站长工具，在线转为base64 */
  background-size: 100% 100%;
  width: 100%;
  height: 100%;
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  left: 0;
  top: 0;
  z-index: 10;
}
.chess_below{
  float: left;
  overflow: visible;
  white-space: nowrap;
  justify-content: center;
  align-content: center;
  text-align: center;
  border-radius: 20rpx;
  border: 20rpx solid rgba(48, 67, 63, 0.8);
  margin-top: 20rpx;
  margin-left: auto;
  margin-right: auto;
  background-color: #583e00;
}

.chess_drag{
  /* opacity: 0.4; */
  position: relative;
  display: inline;
}

.f_center {
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
}