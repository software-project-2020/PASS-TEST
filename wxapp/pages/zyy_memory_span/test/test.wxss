/* pages/zyy_memory_span/test/test.wxss */
page {
  background-image: url('https://picture.morii.top/renzhixuetang/background/9.jpg');
  background-size: 100% 100%;
}

.background {
  width: 750rpx;
  height: 750rpx;
  background-color: aqua;
}

.top {
  width: 25%;
  display: flex;
  margin-left: 65%;
}

.clock {
  margin: 12% 0% 0% 5%;
}

.time {
  margin: 13% 0% 1% 0%;
  height: 50rpx;
  width: 100%;
  display: flex;
  background-color: #ffffff75;
  opacity: 0.8;
  border: 4rpx solid #edbf40d5;
  border-radius: 15rpx;
  text-align: center;
  align-items: center;
  justify-content: center;
}

.chess_map {
  width: 80%;
  display: flex;
  overflow: hidden;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-content: center;
  border-radius: 20rpx;
  border: 10rpx solid rgba(52, 255, 82, 0.438);
  margin-top: 20rpx;
  margin-left: auto;
  margin-right: auto;
  background-color: #ffffff75;
}

.chess_box {
  color: rgb(122, 66, 20);
  font-size: 70rpx;
  font-weight: 600;
  position: relative;
  border-radius: 10rpx;
  border: 10rpx;
  border-color: rgba(80, 44, 14, 0.973);
  /* for Child: the Number */
  display: flex;
  align-items: center;
  justify-content: center;
}

.chess_content {
  /* background-color: #f7cc8b; */
  /* background-image: url(/asset/mood_chess.png); */
  /* 用站长工具，在线转为base64 */
  background-size: 100% 100%;
  width: 100%;
  height: 100%;
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  left: 0;
  top: 0;
  z-index: 10;
}

.chess_below {
  overflow: visible;
  white-space: nowrap;
  justify-content: space-between;
  align-content: space-between;
  text-align: center;
  border-radius: 20rpx;
  border: 10rpx solid rgba(52, 255, 82, 0.438);
  margin-top: 20rpx;
  margin-left: auto;
  margin-right: auto;
  background-color: #ffffff75;
}

.chess_drag {
  /* opacity: 0.4; */
  position: relative;
  display: inline;
  margin: 2px;
}

.f_center {
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
}