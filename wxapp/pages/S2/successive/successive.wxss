page{
  overflow: hidden;
  background-image: url('https://picture.morii.top/renzhixuetang/background/9.jpg');
  background-size: 100% 100%;
  height: 100%;
}
.container{
  flex-direction: column;
  width: 100%;
  height: 100%;
  padding: 0;
}
.img2,.img1{
  display: flex;
  bottom:0; 
}
.top{
  width: 100%;
  display: flex;
  justify-content: center;
}
.clock{
  margin:12% 0% 0% 1%;
}
.proflag{
  margin:10% 0% 0% 1%;
}
.time{
  margin: 13% 6% 1% 0%;
  height: 54rpx;
  width: 12%;
  display: flex;
  background-color: #ffffff;
  opacity: 0.8;
  border: 4rpx solid #B1AFE6;
  border-radius: 15rpx;
  text-align:center;
  align-items:center;
  justify-content: center;
}
.process{
  margin: 13% 7% 1% 0%;
  height: 60rpx;
  width: 28%;
  display: flex;
  background-color: #ffffff;
  opacity: 0.8;
  border: 4rpx solid #B1AFE6;
  border-radius: 15rpx;
  text-align:center;
  align-items:center;
  justify-content: center;
}
.exercise{
  width: 80%;
  height: 59%;
  flex-direction: column;
  margin-top: 1rem; 
  /* margin-bottom: 2rem; */
}
.exercise-show{
  width: 80%;
  height: 60%;
  position: absolute;
  /* z-index: 2; */
  border-radius: 2rem;
  background-color: #ffffff;
  border: 11rpx solid #9f9fdf;
  /* border-radius: 30rpx; */
}
.exercise-txt{
  height: 100%;
  width: 80%;
  font-size: 48rpx;
  font-weight: 600;
  line-height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: auto;
}

.question{
  position: absolute;
  /* z-index: -1; */
  width: 80%;
  height: 60%;
  border-radius: 2rem;
  background-color: #ffffff;
  border: 11rpx solid #9f9fdf;
  /* border-radius: 30rpx; */
}

.question-show{
  width: 80%;
  height: 50%;
  margin: auto;
}

.question-txt{
  height: 100%;
  font-size: 48rpx;
  font-weight: 600;
  line-height: 53rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.option{
  width: 100%;
  height: 25%;
  display: flex;
  border-radius: 2rem;
}

.option-a,.option-b,.option-c,.option-d{
  margin: 1rem;
  border-radius: 2rem;
  border: 11rpx solid #9f9fdf;
}
.option-ab,.option-bb,.option-cb,.option-db{
  margin: 1rem;
  border-radius: 2rem;
  background-color: #9f9fdf;
}

.a,.b,.c,.d{
  height: 80%;
  font-size: 36rpx;
  font-weight: 600;
  line-height: 53rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn{
  margin: auto;
}
.button{
  border: #9f9fdf 7rpx solid;
  border-radius: 60rpx;
  background-color: #cdcdfc;
}
.button text{
  font-size: 50rpx;
  color: #5c5ca3;
}