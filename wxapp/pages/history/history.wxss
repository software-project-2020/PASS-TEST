/* pages/histoy/history.wxss */
page {
  overflow: hidden;
  background-image: url('https://picture.morii.top/renzhixuetang/background/resultbg.jpg');
  background-size: 100% 100%;
}

.top {
  flex-direction: column;
  margin-bottom: 3%;
}

.return {
  width: 75rpx;
  height: 75rpx;
  margin-top: 3%;
  margin-left: 3%;
  margin-right: 10%;
  opacity: 0.8;
}

.text {
  color: #000000;
  font-size: 30px;
  font-weight: 800;
  letter-spacing: 5px;
}

.time{
  text-align: right;
  align-items: right;
  justify-content: right;
  margin-right: 10%;
  color: black;
}

.back {
  border: 5rpx solid #2BB31C;
  background-color: #ffffff;
  text-align: center;
  align-items: center;
  justify-content: center;
  margin: 3% 4%;
  opacity: 0.8;
  border-radius: 100rpx;
}

.result {
  width: 90%;
  height: 92%;
  margin-top: 5%;
  margin-left: 5%;
}

.color{
  width: 30rpx;
  height: 30rpx;
}
.td1 {
  margin-left: 3%;
  margin-right: 5%;
  justify-content: center;
  text-align: center;
 }

.text1{
  width: 90%;
  margin-left: 2%;
  display: flex;
  flex-direction: column;
  text-align:justify;
  font-weight: 600;
  font-size: 20px;
}
.text2{
  margin-left: -3%;
  margin-bottom: 3%;
  font-weight: 600;
  font-size: 20px;
}
.text3{
  width: 90%;
  margin-left: 5%;
  display: flex;
  flex-direction: column;
  text-align:justify;
}

.text_thick{
  font-size: 15px;
  font-weight: 600;
}

.table {
  margin-top: 3%;
  margin-bottom: 3%;
  width: 90%;
  margin-left: 5%;
  border: 0px solid darkgray;
 }
 .tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 4rem;
  align-items: center;
 }
 .td {
  width:40%;
  justify-content: center;
  text-align: center;
 }
 .bg-w{
  background: snow;
 }
 .bg-g{
  background: #E6F3F9;
 }
 .th {
  width: 50%;
  justify-content: center;
  background: #3366FF;
  color: #fff;
  display: flex;
  height: 4rem;
  align-items: center;
 }
