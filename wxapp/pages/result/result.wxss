/* pages/result/result.wxss */
page {
  overflow: hidden;
  background-image: url('https://picture.morii.top/renzhixuetang/background/13.jpg');
  background-size: 100% 100%;
}

.top {
  flex-direction: column;
  margin-bottom: 5%;
}

.return {
  width: 75rpx;
  height: 75rpx;
  margin-top: 3%;
  margin-left: 3%;
  margin-right: 20%;
  opacity: 0.8;
}

.text {
  color: #000000;
  font-size: 30px;
  font-weight: 800;
  letter-spacing: 5px;
}

.back {
  border: 5rpx solid #2BB31C;
  width: 700rpx;
  height: 900rpx;
  background-color: #ffffff;
  text-align: center;
  align-items: center;
  justify-content: center;
  margin: 3% 4%;
  opacity: 0.7;
  border-radius: 100rpx;
}

.button {
  margin-left: 6%;
  margin-right: 6%;
}

.save {
  float: left;
  border-radius: 50rpx;
}

.share {
  float: right;
  border-radius: 50rpx;
}

.result {
  width: 80%;
  height: 80%;
  margin-top: 10%;
  margin-left: 10%;
}