/* pages/result/result.wxss */
page {
  overflow: hidden;
  background-image: url('https://picture.morii.top/renzhixuetang/background/resultbg.jpg');
  background-size: 100% 100%;
}

.top {
  flex-direction: column;
  margin-bottom: 5%;
}

.return {
  width: 75rpx;
  height: 75rpx;
  margin-top: 3%;
  margin-left: 3%;
  margin-right: 20%;
  opacity: 0.8;
}

.text {
  color: #000000;
  font-size: 30px;
  font-weight: 800;
  letter-spacing: 5px;
}

.back {
  border: 5rpx solid #2BB31C;
  width: 700rpx;
  height: 900rpx;
  background-color: #ffffff;
  text-align: center;
  align-items: center;
  justify-content: center;
  margin: 3% 4%;
  opacity: 0.8;
  border-radius: 100rpx;
}

.button {
  margin-left: 6%;
  margin-right: 6%;
}

.save {
  float: left;
  border-radius: 50rpx;
}

.share {
  float: right;
  border-radius: 50rpx;
}

.result {
  width: 90%;
  height: 90%;
  margin-top: 5%;
  margin-left: 5%;
}

.color{
  width: 30rpx;
  height: 30rpx;
}
.td1 {
  margin-left: 3%;
  margin-right: 5%;
  justify-content: center;
  text-align: center;
 }

.text1{
  width: 90%;
  margin-left: 5%;
  display: flex;
  flex-direction: column;
  text-align:justify;
}
.text2{
  width: 90%;
  margin-left: 5%;
  display: flex;
  flex-direction: column;
  text-align:justify;
  font-style: oblique;
  font-weight: 600;
  color: darkgray;
  margin-bottom: 5%;
}
.text_thick{
  font-size: 15px;
  font-weight: 600;
}

.table {
  margin-top: 3%;
  margin-bottom: 3%;
  width: 90%;
  margin-left: 5%;
  border: 0px solid darkgray;
 }
 .tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
 }
 .td {
  width:40%;
  justify-content: center;
  text-align: center;
 }
 .bg-w{
  background: snow;
 }
 .bg-g{
  background: #E6F3F9;
 }
 .th {
  width: 50%;
  justify-content: center;
  background: #3366FF;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
 }

.canvas{
  width: 600rpx;
  height: 750rpx;
  position: fixed;
  left: 75rpx;
  top: 50%;
  margin-top: -435rpx;
}
/*控制canvas显示和隐藏 top值要大 要保证能溢出到屏幕外面*/
.topScroll{
  position: absolute;
  top: -2000rpx;
  background-color: #fff;
} 