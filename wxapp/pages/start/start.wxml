  <mp-dialog title="完善个人资料" show="{{dialogShow}}" bindbuttontap="tapDialogButton" buttons="{{oneButton}}">
    <radio-group class="radio-group" bindchange="radioChange">
      <label>性别： </label>
      <label class="radio" wx:for="{{items}}">
        <radio value="{{item.name}}" checked="{{item.checked}}" />{{item.value}}
      </label>
    </radio-group>
    <view class="section">
      <picker mode="date" value="{{date}}" start="2005-09-01" end="2020-09-01" bindchange="bindDateChange">
        <label class="sectiontitle">出生日期： </label>
        <label class="picker">{{date}}</label>
      </picker>
    </view>
  </mp-dialog>
  <view style="display:flex;">
      <button class="cu-btn bg-orange round lg shadow button-hover">开始测试!</button>
      
    </view>
  <view class="cu-bar tabbar margin-bottom-xsl bg-white mybar" style="height: 70px;">
    <view class="action text-yellow text-bold ">
      <view class="cuIcon-similar"></view>
      <text>排名</text>
    </view>
    

    <view class="action text-yellow text-bold">
      <view class="cuIcon-my">
        <view class="cu-tag badge"></view>
      </view>
      我的
    </view>
  </view>
</view>