  <view class="cu-card case {{isCard?'no-card':''}}">
    <view class="cu-item shadow">
      <view class="image">
        <image src="../../images/start/question.png" mode="widthFix"></image>

        <view class="cu-bar bg-shadeBottom">
          <text class="text-cut">欢迎回来，快去开启你的测试吧！</text>
        </view>
      </view>

    </view>
    <view class="cu-item shadow" style="height: 250px;">
      <view class="cu-list menu-avatar">
        <view class="cu-item" style="margin:15px">
          <view class="content flex-sub">
            <view class="text-yellow text-bold text-xsl" style="font-size: 25px;">{{userInfo.nickName}}</view>
            <view class="text-gray text-sm flex justify-between">
              <view class="tr1">
            <view><text class="text_age">年龄</text></view>
            <view><text class="text_age">{{userInfo.age}}</text></view>
            <view><text class="text_age">岁</text></view>
            <view class="text_age" bindtap="changeinfo">
              <image src="https://picture.morii.top/renzhixuetang/zlx/modify.png"></image>
            </view>
            <view><text class="text_age" bindtap="changeinfo">修改</text></view>
          </view>
            </view>
          </view>
          <view class="cu-avatar round lg" style="background-image:url({{userInfo.avatarUrl}});"></view>

        </view>
        <view class="justify-center" style="padding:0 5px;opacity:0.7;">
          <view class="action" style="padding: 5px 20px;">
            <view class="padding bg-gradual-orange solid radius shadow-blur process" style="padding:0px 10px;width:61%;">计划</view>
          </view>
          <view class="action" style="padding: 5px 20px;">
            <view class="padding bg-gradual-green solid radius shadow-blur process" style="padding:0px 10px;width:50%;">注意</view>
          </view>
          <view class="action" style="padding: 5px 20px;">
            <view class="padding bg-gradual-red solid radius shadow-blur process" style="padding:0px 10px;">同时性</view>
          </view>
          <view class="action" style="padding: 5px 20px;">
            <view class="padding bg-gradual-purple solid radius shadow-blur process" style="padding:0px 10px;width:41%;">继时性</view>
          </view>
        </view>

      </view>
    </view>
  </view>
