}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 14%;
  align-items: center;
}

.td {
  width: 40%;
  justify-content: center;
  text-align: center;
}

.bg-w {
  background: snow;
}

.bg-g {
  opacity: 0.9;
  background: snow;
}

.th {
  width: 40%;
  justify-content: center;
  background: rgb(189, 181, 181);
  /* opacity: 0.7; */
  color: #fff;
  display: flex;
  height: 100%;
  align-items: center;
}

.pages {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 12%;
  margin: 1%;
}

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 16%;
}

.userinfo-avatar {
  width: 36%;
  margin: 5%;
