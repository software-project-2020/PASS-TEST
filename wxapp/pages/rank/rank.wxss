page {
  overflow: hidden;
  background-image: url('https://picture.morii.top/renzhixuetang/background/rankbg2.jpg');
  background-size: 100% 100%;
  height: 100%;
}

.container {
  flex-direction: column;
  width: 100%;
  height: 100%;
  padding: 0;
}

.body {
  height: 95%;
  width: 90%;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 20px;
  margin: 5%;
