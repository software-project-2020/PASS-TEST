page{
  overflow: hidden;
  background-image: url('https://picture.morii.top/renzhixuetang/background/rankbg2.jpg');
  background-size: 100% 100%;
  height: 100%;
}

.container{
  flex-direction: column;
  width: 100%;
  height: 100%;
  padding: 0;
}

.body{
  height: 95%;
  width: 90%;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 20px;
  margin: 5%;
  position: relative;
}

.combobox{
  width: 100%;
  height: 10%;
}

.select-wrap {
  width: 280rpx;
  height: 100%;
  float: right;
  margin-top: 4%;
  margin-right: 5%;
}

.table {
  border: 0px solid darkgray;
  padding-left:5%;
  padding-right:5%;
  height: 60%;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 14%;
  align-items: center;
}
.td {
    width:40%;
    justify-content: center;
    text-align: center;
}
.bg-w{
  background: snow;
}
.bg-g{
  background: rgb(90, 146, 90);
  color: #fff;
  opacity: 0.9;
}
.th {
  width: 40%;
  justify-content: center;
  background: rgb(72, 124, 72);
  color: #fff;
  display: flex;
  height: 100%;
  align-items: center;
}

.pages{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 12%;
  margin: 1%;
}

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 16%;
}

.userinfo-avatar {
  width: 36%;
  margin: 5%;
  margin-left: 12%;
  border-radius: 50%;
}

.userself{
  display: flex;
  flex-direction: column;
  width: 100%;
}

.userrank{
  width: 60%;
  margin: 1%;
  padding-left: 10%
}

.btn{
  background-color: rgb(78, 126, 78);
}

.button-text{
  font-size: small;
  color: #fff;
}
