page {
  overflow: hidden;
  background-image: url('https://picture.morii.top/renzhixuetang/background/rankbg2.jpg');
  background-size: 100% 100%;
  height: 100%;
}

.container {
  flex-direction: column;
  width: 100%;
  height: 100%;
  padding: 0;
}

.body {
  height: 95%;
  width: 90%;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 20px;
  margin: 5%;
  position: relative;
}

.tab {
  width: 90%;
  height: 10%;
  display: flex;
  /* background-color: black; */
  margin: auto;
  margin-top: 5%;
}

.tabsquare {
  width: 19%;
  margin: 0 0.5% 0 0.5%;
  /* background-color: green;
  border-top-right-radius: 40%;
  border-top-left-radius: 40%; */
}

.t,
.p,
.a,
.s1,
.s2 {
  width: 80%;
  height: 80%;
  border-radius: 50%;
  margin: 10%;
}

.t {
  border: 4rpx solid #B1AFE6;
  background-color: #fff;
}

.p {
  border: 4rpx solid #a541a5;
  background-color: #fff;
}

.a {
  border: 4rpx solid #383599;
  background-color: #fff;
}

.s1 {
  border: 4rpx solid #88a349;
  background-color: #fff;
}

.s2 {
  border: 4rpx solid #8e5699;
  background-color: #fff;
}

.tb {
  background-color: #3b4779;
}

.pb {
  background-color: #387ba6;
}

.ab {
  background-color: #c36d5c;
}

.s1b {
  background-color: #ecdbcb;
}

.s2b {
  background-color: #dfb85d;
}

.tb,
.pb,
.ab,
.s1b,
.s2b {
  width: 80%;
  height: 80%;
  border-radius: 50%;
  background-color: #fff;
  margin: 10%;
}

.table {
  border: 0px solid darkgray;
  padding-left: 2%;
  padding-right: 2%;
  height: 60%;
  width: 85%;
  margin: auto;
  background-color: green;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 14%;
  align-items: center;
}

.td {
  width: 40%;
  justify-content: center;
  text-align: center;
}

.bg-w {
  background: snow;
}

.bg-g {
  background: rgb(90, 146, 90);
  color: #fff;
  opacity: 0.9;
}

.th {
  width: 40%;
  justify-content: center;
  background: rgb(72, 124, 72);
  color: #fff;
  display: flex;
  height: 100%;
  align-items: center;
}

.pages {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 12%;
  margin: 1%;
}

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 16%;
}

.userinfo-avatar {
  width: 36%;
  margin: 5%;
  margin-left: 12%;
  border-radius: 50%;
}

.userself {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.userrank {
  width: 60%;
  margin: 1%;
  padding-left: 10%
}

.btn {
  background-color: rgb(78, 126, 78);
}

.button-text {
  font-size: small;
  color: #fff;
}